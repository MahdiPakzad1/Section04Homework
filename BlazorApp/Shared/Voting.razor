<button class="btn btn-success mx-2" @onclick="ThumbsUp">
    <span class="oi oi-thumb-up"></span> Approvals - @approvals
</button>
<button class="btn btn-danger mx-2" @onclick="ThumbsDown">
    <span class="oi oi-thumb-down"></span> DisApprovals - @disapprovals
</button>

@code {
    private int approvals = 0;
    private int disapprovals = 0;

    private void ThumbsUp()
    {
        approvals += 1;
    }
    private void ThumbsDown()
    {
        disapprovals += 1;
    }
}

